<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @publication.title %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= image_tag(@publication.photo) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @publication.description %>
  </p>

