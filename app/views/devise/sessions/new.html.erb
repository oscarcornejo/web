<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
      <h2>Ingresar</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="field">
            <%= f.label :email, "Email" %><br />
            <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => "Ingresa tu email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password, "Contraseña" %><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "Ingresa tu contraseña" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Recordar datos" %>
        </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Ingresar", :class => 'btn btn-primary' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
