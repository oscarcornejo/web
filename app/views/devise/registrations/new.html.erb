<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Regístrate gratis</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="field">
            <%= f.label :name, "Nombre" %><br />
            <%= f.text_field :name, autofocus: true, :class => 'form-control', :placeholder => "Ingresa tu nombre" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :email, "Email" %><br />
            <%= f.email_field :email, :class => 'form-control', :placeholder => "Ingresa tu email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password, "Contraseña" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> carácteres mínimos)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "Ingresa una contraseña" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password_confirmation, "Confirma tu contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => "Ingresa nuevamente tu contraseña" %>
          </div>
        </div>

        <div class="actions">
        <%= f.submit "Registrarme", :class => 'btn btn-primary' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
